@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization
@using System.Globalization
@model IEnumerable<ibillcraft.Models.StaffModel>
@inject IViewLocalizer Localizer;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "User Master ";
    CultureInfo usCulture = new CultureInfo(ViewBag.Format);
    ViewBag.Header = "User";

}
<head>
    <script src="~/jsfiles/staff/staff.js"></script>
</head>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="m-0 font-weight-bold text-primary">@Localizer["User Master"]</h2>
            </div>
            <div class="col-md-2 justify-content-lg-end justify-content-md-end justify-content-center mt-lg-0 mt-md-0 mt-3">
                <input type="text" id="custom-search" class="form-control " placeholder="Search" />
            </div>
            <div class="col-auto d-flex flex-wrap toggle">
                @*  <div class="form-check form-switch mt-lg-1 mt-md-1 mt-3 ml-2 ">

                <input class="form-check-input" type="checkbox" id="toggleStatus" checked onclick="performAction()">
                <label class="form-check-label" for="toggleStatus" data-on="On" data-off="Off"></label>
                </div> *@

                <button class="btn btn-md text-light bg-primary mt-3 mt-lg-0 mt-md-0 ml-2"
                        type="button" title="Add Staff"
                        data-bs-toggle="modal" style="display:@Context.Session.GetString("AddAccess")"
                        data-bs-target="#addSubscriptionmodel" onclick="return AddStaff()">
                    <i class="fa fa-plus"></i>
                </button>
                <button class="btn btn-md text-light bg-success mt-3 mt-lg-0 mt-md-0 ml-2"
                        type="button" title="Excel" onclick="Excel()">
                    <i class="fas fa-file-excel"></i>
                </button>
               
                @*
                <button class="btn btn-md text-light bg-danger mt-3 mt-lg-0 mt-md-0 ml-2"
                type="button"
                data-bs-toggle="modal" onclick="return Pdf()" title="Pdf"
                data-bs-target="#addSubscription">
                <i class="fas fa-file-pdf"></i>
                </button> *@
            </div>

        </div>
    </div>
    <div class="card-body">
        <!-- start Griddata-->
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">
                <thead>
                    <tr style="text-align: center;">
                        <th width="6%"> @Localizer["Sr.No"]</th>
                        <th style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.st_id)]
                        </th>
                        <th>
                            @Localizer[@Html.DisplayNameFor(model => model.st_staff_name)]
                        </th>
                        <th>@Localizer[Html.DisplayNameFor(model => model.st_email)]</th>
                        <th>@Localizer[Html.DisplayNameFor(model => model.st_address)]</th>
                        <th>@Localizer[Html.DisplayNameFor(model => model.st_contact)]</th>
                        <th>@Localizer[Html.DisplayNameFor(model => model.st_designation_id)]</th>
                       
                        <th width="7%" class="no-filter">@Localizer["Action"]</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int itemNumber = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr style="text-align: center;">
                            <td>
                                @itemNumber
                            </td>
                            @*  <td style="display:none">
                        @Html.DisplayFor(modelItem => item.UserId)
                        </td> *@
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.st_id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.st_staff_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.st_email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.st_address)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.st_contact)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.st_designation_id)
                            </td>
                       
                            <td>
                                <div class="d-inline-flex">

                                    <a class='editicon text-primary' title="Edit" asp-action="Edit" asp-controller="Staff" asp-route-st_id="@item.st_id" style="display:@Context.Session.GetString("EditAccess")"> <span class='fas fa-edit'></span></a>
                                    <a href="@Url.Action("Delete", new { st_id = @item.st_id })" onclick="return confirm('Are you sure you want to delete?')" style="display:@Context.Session.GetString("DeleteAccess")" class='deleteicon text-danger' title="Delete"> <span class='fa fa-trash ml-2'></span></a>

                                </div>
                            </td>
                        </tr>
                        itemNumber++;
                    }
                </tbody>
            </table>
        </div>
        <!-- End Griddata-->
        <!-- start Pagination-->
        <div class="row mt-3">
            <div class="col-lg-5 col-md-5 col-12 ">
                <div class="row ">
                    <div class="col-lg-3 col-md-3 col-12 d-flex justify-content-lg-start justify-content-md-start justify-content-center ">
                        <h6 class="mt-2"> @Localizer["Show"]</h6>&nbsp;&nbsp;
                        <select name="table_id_length" id="table_length_select" aria-controls="table_id" class="form-select w-auto">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        &nbsp;&nbsp;
                        <h6 class="mt-2"> @Localizer["entries"]</h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-2"></div>
            <div class="col-lg-5 col-md-5 col-12 mt-lg-0 mt-md-0 mt-3">
                <nav aria-label="Page navigation example">
                    <div id="table_id_length">

                        <div id="custom-pagination" class=" d-flex text-center text-lg-end justify-content-end  text-end float-end">
                            <ul class="pagination justify-content-lg-end justify-content-md-end justify-content-center">


                                <li class="page-item disabled">
                                    <button class="page-link" href="#" aria-label="Previous" data-page="0"> <span aria-hidden="true">&laquo;</span></button>
                                </li>
                                <li class="page-item active"><button class="page-link" href="#" data-page="1">1</button></li>

                                <li class="page-item "><button class="page-link" href="#" data-page="2" aria-label="Next">  <span aria-hidden="true">&raquo;</span></button></li>

                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- end Pagination-->
    </div>
</div>
<script>

    $(document).ready(function () {

        const urlParams = new URLSearchParams(window.location.search);

        const status = urlParams.get('status');
        if (status === '0') {

            $('#toggleStatus').prop('checked', false);
        }


    });

    myFunction();
    $('#table_length_select').change();

</script>


