@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer;
@model IEnumerable<ibillcraft.Models.EmailList>
@{
    ViewData["Title"] = "Email List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Header = "Email List ";

}
<head>
    <script src="~/jsfiles/commonjs/commonjs.js"></script><!-- For Common Jquery-->

    <script src="~/jsfiles/emaillist/emaillist.js"></script>

</head>
<div class="card shadow mb-4">
    <!--Start Header -->
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="m-0 font-weight-bold text-primary">@Localizer["Email List "]</h2>
            </div>
            <div class="col-md-2 justify-content-lg-end justify-content-md-end justify-content-center mt-lg-0 mt-md-0 mt-3">
                <input type="text" id="custom-search" class="form-control" placeholder=@Localizer["Search"] />
            </div>
            <div class="col-auto d-flex flex-wrap toggle">

                <button class="btn btn-md text-light bg-primary mt-3 mt-lg-0 mt-md-0 ml-2" title="Add Email Rule Configuration" type="button" data-bs-toggle="modal" data-bs-target="#addSubscription" onclick="return AddParameter()"> <i class="fa fa-plus"></i>  </button>
                <button class="btn btn-md text-light bg-success mt-3 mt-lg-0 mt-md-0 ml-2" title="Excel" type="button" data-bs-toggle="modal" data-bs-target="#addSubscription" onclick="return Excel()">  <i class="fas fa-file-excel"></i> </button>
                <button class="btn btn-md text-light bg-danger mt-3 mt-lg-0 mt-md-0 ml-2" title="Pdf" type="button" data-bs-toggle="modal" data-bs-target="#addSubscription" onclick="return Pdf()"> <i class="fas fa-file-pdf"></i> </button>
            </div>
        </div>
    </div>
    <!--End  Header -->
    <!--Start Body -->
    <div class="card-body">
        <!-- start Griddata-->
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th width="6%">
                            @Localizer["Sr.No"]
                        </th>

                        <th style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.E_id)]
                        </th>
                        <th>
                            @Localizer[@Html.DisplayNameFor(model => model.E_email)]
                        </th>
                        <th style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.E_password)]
                        </th>
                        <th width="7%" style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.E_smtph)]
                        </th>
                        <th width="7%" style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.E_smtpp)]
                        </th>
                        <th width="7%" style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.E_imaph)]
                        </th>
                        <th width="7%" style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.E_imapp)]
                        </th>
                        <th width="7%" style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.E_poph)]
                        </th>
                        <th width="7%" style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.E_popp)]
                        </th>
                        <th width="7%">
                            @Localizer[@Html.DisplayNameFor(model => model.E_key)]
                        </th>
                        <th width="7%" style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.E_issslEnable)]
                        </th>
                        <th width="7%">@Localizer["Action"]</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int itemNumber = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @itemNumber
                            </td>

                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.E_id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.E_email)
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.E_password)
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.E_smtph)
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.E_smtpp)
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.E_imaph)
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.E_imapp)
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.E_poph)
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.E_popp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.E_key)
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.E_issslEnable)
                            </td>
                            <td>
                                <div class="d-inline-flex">
                                    <a class='editicon text-primary' title="Edit" onclick="editLinkClick('@item.E_id','@item.E_email','@item.E_password','@item.E_smtph','@item.E_smtpp','@item.E_imaph','@item.E_imapp','@item.E_poph','@item.E_popp','@item.E_key','@item.E_issslEnable')" style="display:@Context.Session.GetString("EditAccess")"> <span class='fas fa-edit'></span></a>
                                    <a href="@Url.Action("Delete", new { E_id = @item.E_id })" onclick="return confirm('Are you sure you want to delete?')" class='deleteicon text-danger' title="Delete" style="display:@Context.Session.GetString("DeleteAccess")"> <span class='fa fa-trash ml-2'></span></a>
                                </div>
                            </td>
                        </tr>
                        itemNumber++;
                    }
                </tbody>
            </table>
        </div>
        <!-- End Griddata-->
        <!-- start Pagination-->
        <div class="row mt-3">
            <div class="col-lg-5 col-md-5 col-12 ">
                <div class="row ">
                    <div class="col-lg-3 col-md-3 col-12 d-flex justify-content-lg-start justify-content-md-start justify-content-center ">
                        <h6 class="mt-2">@Localizer["Show"]</h6>&nbsp;&nbsp;
                        <select name="table_id_length" id="table_length_select" aria-controls="table_id" class="form-select w-auto">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        &nbsp;&nbsp;
                        <h6 class="mt-2">@Localizer["entries"]</h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-2"></div>
            <div class="col-lg-5 col-md-5 col-12 mt-lg-0 mt-md-0 mt-3">
                <nav aria-label="Page navigation example">
                    <div id="table_id_length">

                        <div id="custom-pagination" class=" d-flex text-center text-lg-end justify-content-end  text-end float-end">
                            <ul class="pagination justify-content-lg-end justify-content-md-end justify-content-center">
                                <li class="page-item disabled">
                                    <button class="page-link" href="#" aria-label="Previous" data-page="0"> <span aria-hidden="true">&laquo;</span></button>
                                </li>
                                <li class="page-item active"><button class="page-link" href="#" data-page="1">1</button></li>

                                <li class="page-item "><button class="page-link" href="#" data-page="2" aria-label="Next">  <span aria-hidden="true">&raquo;</span></button></li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- end Pagination-->
        <!-- start Modal-->
        <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-dark" id="exampleModalLabel">@Localizer["Add Email List"]</h5>
                        <button type="button" class="btn-close bg-primary text-white" data-bs-dismiss="modal" aria-label="Close" onclick="CancelData()"></button>
                    </div>
                    <div class="modal-body text-dark">
                        <div class="form-group" style="display:none">
                            <label class="control-label">Id</label>
                            <input id="E_id" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-2 ">
                                <label class="control-label fw-bold">@Localizer["Email Id"] <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-md-4">
                                <input id="E_email" class="form-control" placeholder="Enter EmailId" />
                            </div>

                            <div class="col-md-2  " style="text-align: end">
                                <label class="control-label fw-bold">@Localizer["Key"] <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-md-4">
                                <input id="E_key" class="form-control" placeholder="Enter Key" />
                            </div>
                            <div class="col-md-2 " style="text-align: end;display:none">
                                <label class="control-label fw-bold">@Localizer["Password"] <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-md-4 " style="display:none">
                                <input id="E_password" class="form-control" placeholder="Enter Password" />
                            </div>

                        </div>


                        <div class="row mt-3">
                            <div class="col-md-2 " style="display:none">
                                <label class="control-label fw-bold">@Localizer["SMTP Host"] <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-md-4" style="display:none">
                                <input id="E_smtph" class="form-control" placeholder="Enter SMTP Host" />
                            </div>
                            <div class="col-md-2 " style="text-align: end;display:none">
                                <label class="control-label fw-bold">@Localizer["SMTP Port"] <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-md-4 " style="display:none">
                                <input id="E_smtpp" class="form-control" placeholder="Enter SMTP Port" />
                            </div>

                        </div>

                        <div class="row mt-3" style="display:none">
                            <div class="col-md-6 ">
                                <input type="radio" id="imap" value="IMAP" name="imappop" onclick="return imap()" /> <label for="imap">IMAP</label>
                                <input type="radio" id="pop" value="POP3" name="imappop" onclick="return pop()" />  <label for="pop">POP</label>
                            </div>
                            <div class="col-md-6"></div>
                        </div>
                        <div style="display:none;" id="imapinput">
                            <div class="row mt-3">
                                <div class="col-md-2 ">
                                    <label class="control-label fw-bold">@Localizer["IMAP Host"] <span class="text-danger">*</span></label>
                                </div>
                                <div class="col-md-4">
                                    <input id="E_imaph" class="form-control" placeholder="Enter IMAP Host" />
                                </div>
                                <div class="col-md-2 " style="text-align: end">
                                    <label class="control-label fw-bold">@Localizer["IMAP Port"] <span class="text-danger">*</span></label>
                                </div>
                                <div class="col-md-4 ">
                                    <input id="E_imapp" class="form-control" placeholder="Enter IMAP Port" />
                                </div>

                            </div>
                        </div>

                        <div style="display:none;" id="popinput">
                            <div class="row mt-3">
                                <div class="col-md-2 ">
                                    <label class="control-label fw-bold">@Localizer["POP3 Host"] <span class="text-danger">*</span></label>
                                </div>
                                <div class="col-md-4">
                                    <input id="E_poph" class="form-control" placeholder="Enter POP3 Host" />
                                </div>
                                <div class="col-md-2 " style="text-align: end">
                                    <label class="control-label fw-bold">@Localizer["POP3 Port"] <span class="text-danger">*</span></label>
                                </div>
                                <div class="col-md-4 ">
                                    <input id="E_popp" class="form-control" placeholder="Enter POP3 Port" />
                                </div>

                            </div>
                        </div>

                        <div class="row mt-3">

                            <div class="col-md-2 ml-4" style="display:none">
                                <div class="form-check ">
                                    <input class="form-check-input" type="checkbox" value="" id="E_issslEnable" checked>
                                    <label class="form-check-label " for="E_issslEnable">
                                        @Localizer["SSL Enable"]
                                    </label>
                                </div>
                            </div>

                        </div>

                    </div>

                    <div class="modal-footer">
                        <button title="Save" type="submit" id="btnsubmit" value="Create" class="btn btn-primary" onclick="submitParameter()">@Localizer["Submit"]</button>
                        <button type="button" title="Close" class="btn btn-danger" data-dismiss="modal" onclick="CancelData()">@Localizer["Cancel"]</button>
                    </div>
                </div>
            </div>

        </div>
        <!-- end Modal-->
    </div>
    <!--End Body -->
</div>


<script>
    $(document).ready(function () {
        //$('#dataTable').DataTable();
        //$('.table_id_length').css("display", "none");
        $('#createModal').modal({
            backdrop: 'static', // Prevents closing on outside click
            keyboard: false // Prevents closing with the escape key
        });
        const urlParams = new URLSearchParams(window.location.search);

        const status = urlParams.get('status');
        if (status === '0') {

            $('#toggleStatus').prop('checked', false);
        }
    });
    myFunction();
    $('#table_length_select').change();



</script>









