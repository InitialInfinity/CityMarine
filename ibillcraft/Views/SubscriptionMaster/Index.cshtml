@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer;
@model IEnumerable<ibillcraft.Models.SubscriptionModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Master";
}
<head>
    <script src="~/jsfiles/subscriptionmaster/subscriptionmaster.js"></script>
</head>
<div class="card shadow mb-4">
    <!--Start Header -->
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="m-0 font-weight-bold text-primary">@Localizer["Subscription Master"]</h2>
            </div>
            <div class="col-md-2 justify-content-lg-end justify-content-md-end justify-content-center mt-lg-0 mt-md-0 mt-3">
                <input type="text" id="custom-search" class="form-control" placeholder="Search" />
            </div>
            <div class="col-auto d-flex flex-wrap toggle">
                <div class="form-check form-switch mt-lg-1 mt-md-1 mt-3 ml-2 ">

                    <input class="form-check-input" type="checkbox" id="toggleStatus" checked onclick="performAction()">
                    <label class="form-check-label" for="toggleStatus" data-on="On" data-off="Off"></label>
                </div>
                <button class="btn btn-md text-light bg-primary mt-3 mt-lg-0 mt-md-0 ml-2"
                        type="button" title="Add Subscription"
                        data-bs-toggle="modal"
                        data-bs-target="#addSubscriptionmodel" onclick="return displaymodel()">
                    <i class="fa fa-plus"></i>
                </button>
                <button class="btn btn-md text-light bg-success mt-3 mt-lg-0 mt-md-0 ml-2"
                        type="button" title="Excel"
                        data-bs-toggle="modal"
                        data-bs-target="#addSubscriptionmodel" onclick="return Excel()">
                    <i class="fas fa-file-excel"></i>
                </button>
                <button class="btn btn-md text-light bg-danger mt-3 mt-lg-0 mt-md-0 ml-2"
                        type="button" title="Pdf"
                        data-bs-toggle="modal"
                        data-bs-target="#addSubscriptionmodel" onclick="return Pdf()">
                    <i class="fas fa-file-pdf"></i>
                </button>
            </div>
          @*   <div class="col-auto d-flex flex-wrap">
                <button class="btn btn-md text-light bg-primary mt-3 mt-lg-0 mt-md-0" type="button" title="Add Subscription" data-bs-toggle="modal" onclick="return displaymodel()">
                    <i class="fa fa-plus"></i>
                </button>
                <button class="btn btn-md text-light bg-success mt-3 mt-lg-0 mt-md-0 ml-2" type="button" title="Excel" onclick="return Excel()" data-bs-toggle="modal" data-bs-target="#addSubscriptionmodel">
                    <i class="fas fa-file-excel"></i>
                </button>
                
                <button class="btn btn-md text-light bg-danger mt-3 mt-lg-0 mt-md-0 ml-2" type="button" data-bs-toggle="modal" title="Pdf" onclick="return Pdf()" data-bs-target="#addSubscriptionmodel">
                    <i class="fas fa-file-pdf"></i>
                </button>
            </div> *@
        </div>
        <!--End  Header -->
        <!--Start Body -->

    </div>
    <!-- start Griddata-->
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th width="6%">@Localizer["Sr.No"]</th>
                        <th style="display:none">
                            @Html.DisplayNameFor(model => model.sm_id)
                        </th>
                        <th>@Localizer["Package Name"]</th>
                        <th>@Localizer["Service"]</th>
                        <th>@Localizer["Price"]</th>
                        <th>@Localizer["Discount"]</th>
                        <th>@Localizer["Final Price"]</th>
                        <th>@Localizer["Invoice"]</th>
                        <th>@Localizer["Quotation"]</th>
                        <th>@Localizer["Expense"]</th>
                        <th>@Localizer["Cash Order"]</th>
                        <th>@Localizer["Duration"]</th>
                        <th width="7%">@Localizer["Status"]</th>
                        <th width="7%">@Localizer["Action"]</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int itemNumber = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @itemNumber
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.sm_id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.package_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sm_service)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.subAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.subDiscount) %
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.final_Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Invoice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quotation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Expence)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cash_order)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sub_duration)
                            </td>
                            <td>
                                <div class="form-check form-switch ml-auto active-toggle">
                                    @if (item.com_isactive == "Active")
                                    {
                                        <input class="form-check-input ml-auto" type="checkbox" id="toggleSwitch" checked onclick="ToggleSwitchCon('@item.sm_id','@item.package_name','@item.sm_service','@item.subAmount','@item.subDiscount','@item.final_Amount','@item.sub_duration','@item.Invoice','@item.Quotation','@item.Expence','@item.cash_order','0')">
                                        <label class="form-check-label" for="toggleSwitch" data-on="On" data-off="Off"></label>
                                    }
                                    else
                                    {
                                        <input class="form-check-input ml-auto" type="checkbox" id="toggleSwitch" onclick="ToggleSwitchCon('@item.sm_id','@item.package_name','@item.sm_service','@item.subAmount','@item.subDiscount','@item.final_Amount','@item.sub_duration','@item.Invoice','@item.Quotation','@item.Expence','@item.cash_order','1')">
                                        <label class="form-check-label" for="toggleSwitch" data-on="On" data-off="Off"></label>
                                    }
                                </div>

                            </td>
                            <td>
                                <div class="d-inline-flex">
                                    <a class='editicon text-primary' title="Edit" onclick="editLinkClick('@item.sm_id','@item.package_name','@item.sm_service','@item.subAmount','@item.subDiscount','@item.final_Amount','@item.Invoice','@item.Expence','@item.Quotation','@item.cash_order','@item.sub_duration')"> <span class='fas fa-edit'></span></a>
                                    <a href="@Url.Action("Delete", new { sm_id = @item.sm_id })" onclick="return confirm('Are you sure you want to delete?')" class='deleteicon text-danger' title="Delete"> <span class='fa fa-trash ml-2'></span></a>
                                </div>
                            </td>
                        </tr>
                        itemNumber++;
                    }
                </tbody>
            </table>
        </div>
        <!-- End Griddata-->
        <!-- start Pagination-->
        <div class="row mt-3">
            <div class="col-lg-5 col-md-5 col-12 ">
                <div class="row ">
                    <div class="col-lg-3 col-md-3 col-12 d-flex justify-content-lg-start justify-content-md-start justify-content-center ">
                        <h6 class="mt-2"> @Localizer["Show"]</h6>&nbsp;&nbsp;
                        <select name="table_id_length" id="table_length_select" aria-controls="table_id" class="form-select w-auto">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        &nbsp;&nbsp;
                        <h6 class="mt-2"> @Localizer["entries"]</h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-2"></div>
            <div class="col-lg-5 col-md-5 col-12 mt-lg-0 mt-md-0 mt-3">
                <nav aria-label="Page navigation example">
                    <div id="table_id_length">

                        <div id="custom-pagination" class=" d-flex text-center text-lg-end justify-content-end  text-end float-end">
                            <ul class="pagination justify-content-lg-end justify-content-md-end justify-content-center">
                                <li class="page-item disabled">
                                    <button class="page-link" href="#" aria-label="Previous" data-page="0"> <span aria-hidden="true">&laquo;</span></button>
                                </li>
                                <li class="page-item active"><button class="page-link" href="#" data-page="1">1</button></li>

                                <li class="page-item "><button class="page-link" href="#" data-page="2" aria-label="Next">  <span aria-hidden="true">&raquo;</span></button></li>

                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- end Pagination-->
        <!-- start Modal-->
        <div class="modal fade" id="addSubscription" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-dark" id="AddModalLabel" style="display:none">@Localizer["Add Subscription"]</h5>
                        <h5 class="modal-title text-dark" id="EditModalLabel" style="display:none">@Localizer["Edit Subscription"]</h5>
                        <button type="button" class="btn-close bg-primary text-white" data-bs-dismiss="modal" aria-label="Close" onclick="CancelData()"></button>
                    </div>

                    <div class="modal-body text-dark">
                        
                            <div class="form-group" style="display:none">
                                <label class="control-label">sm_id </label>
                                <input type="text" id="sm_id" name="sm_id" class="form-control" autoComplete="off" />
                                <span class="text-danger"></span>
                          
                        </div>
                        <div class="row">
                            
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">@Localizer["Package Name"]<span class="text-danger">*</span></label>
                                    <input type="text" id="package_name" name="packageName" class="form-control" placeholder="Enter Package Name" maxlength="50" />
                                    <span id="message"></span>
                                </div>
                            </div>

                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">@Localizer["Service"] <span class="text-danger">*</span></label>
                                    <input type="text" id="sm_service" name="service" class="form-control" placeholder="Enter Service" maxlength="100" />
                                    <span id="message"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold"> @Localizer["Price"]<span class="text-danger">*</span></label>
                                    <input type="text" id="subAmount" oninput="isValidNumber(this)" name="price" class="form-control" placeholder="Enter Price" maxlength="50" />
                                </div>
                            </div>

                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">@Localizer["Discount"]<span class="text-danger">*</span> </label>
                                    <input type="text" id="subDiscount" name="discount" oninput="isValidNumber(this),calculateFinalAmount(this)" class="form-control" placeholder="Enter Discount in Percentage" maxlength="50" />
                                    <span id="message"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold"> @Localizer["Final Price"]<span class="text-danger">*</span> </label>
                                    <input type="text" id="final_Amount" name="fPrice" class="form-control"  placeholder="Final Price" readonly />
                                    <span id="message"></span>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold"> @Localizer["Subscription Duration"]<span class="text-danger">*</span> </label>
                                    <input type="text" id="sub_duration" name="sub_duration" class="form-control" oninput="isValidNumber(this)"  placeholder="Enter Duration In Month" maxlength="50" />
                                    <span id="message"></span>
                                </div>
                            </div>


                        </div>
                        <div class="row mt-2">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">@Localizer["Invoice"]<span class="text-danger">*</span> </label>
                                    <input type="text" id="Invoice" name="invoice" oninput="isValidNumber(this)" class="form-control" placeholder="Enter No. of Invoices" maxlength="50" />
                                    <span id="message"></span>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold"> @Localizer["Quotation"]<span class="text-danger">*</span> </label>
                                    <input type="text" id="Quotation" name="quotation" oninput="isValidNumber(this)" class="form-control" placeholder="Enter No. of Quotations" maxlength="50" />
                                    <span id="message"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">
                                        @Localizer["Expense"] <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" id="Expence" name="expense" oninput="isValidNumber(this)" class="form-control" placeholder="Enter No. of Expences" maxlength="50" />
                                    <span id="message"></span>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">@Localizer["Cash Order"] <span class="text-danger">*</span> </label>
                                    <input type="text" id="cash_order" name="cashOrder" oninput="isValidNumber(this)" class="form-control" placeholder="Enter No. of Cash Order" maxlength="50" />
                                    <span id="message"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row mt-2">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-check ">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                                    <label class="form-check-label " for="flexCheckChecked">
                                        @Localizer["Is Active"]
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                    <div class="modal-footer">
                        <button title="Save" type="submit" id="btnsubmit" value="Create" class="btn btn-primary" onclick="SubmitSubMaster()"> @Localizer["Submit"]</button>
                        <button type="button" title="Close" class="btn btn-secondary" data-dismiss="modal" onclick="CancelData()"> @Localizer["Cancel"]</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- end Modal-->
    </div>
    <!--End Body -->
</div>
<script>
    $(document).ready(function () {
        //$('#dataTable').DataTable();
        //$('.table_id_length').css("display", "none");
        $('#addSubscription').modal({
            backdrop: 'static', // Prevents closing on outside click
            keyboard: false // Prevents closing with the escape key
        });
        const urlParams = new URLSearchParams(window.location.search);

        const status = urlParams.get('status');
        if (status === '0') {

            $('#toggleStatus').prop('checked', false);
        }

    });
    myFunction();
    $('#table_length_select').change();

</script>