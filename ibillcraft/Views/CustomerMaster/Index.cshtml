@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer;
@model IEnumerable<ibillcraft.Models.CustomerMasterModel>
@{
    ViewData["Title"] = "Client Master";
    ViewBag.Header = "Client Master";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script src="~/jsfiles/customermaster/customermaster.js"></script>
</head>


<div class="card shadow mb-4">
    <!--Start Header -->
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="m-0 font-weight-bold text-primary">@Localizer["Client Master"]</h2>
            </div>
            <div class="col-md-2 justify-content-lg-end justify-content-md-end justify-content-center mt-lg-0 mt-md-0 mt-3">
                <input type="text" id="custom-search" class="form-control" placeholder="Search" />
            </div>

            <div class="col-auto d-flex flex-wrap toggle">
                <div class="form-check form-switch mt-lg-1 mt-md-1 mt-3 ml-2 ">

                    <input class="form-check-input" type="checkbox" id="toggleStatus" checked onclick="performAction()" style="cursor:pointer;margin-top:9px">
                    <label class="form-check-label" for="toggleStatus" data-on="On" data-off="Off" ></label>
                </div>

                <a asp-controller="CustomerMaster" asp-action="EditIndex1" style="display:@Context.Session.GetString("AddAccess")" class="btn btn-md text-light bg-primary mt-3 mt-lg-0 mt-md-0 ml-3" title="Add New">

                    <i class="fa fa-plus"></i>
                </a>
              
                <button class="btn btn-md text-light bg-success mt-3 mt-lg-0 mt-md-0 ml-2"
                        type="button"
                        data-bs-toggle="modal"
                        onclick="return Excel()" title="Excel">
                    <i class="fas fa-file-excel" ></i>
                </button>
                <button class="btn btn-md text-light bg-danger mt-3 mt-lg-0 mt-md-0 ml-2"
                        type="button"
                        data-bs-toggle="modal"
                        onclick="return Pdf()" title="Pdf">
                    <i class="fas fa-file-pdf" ></i>
                </button>
            </div>
          
        </div>
    </div>
    <!--End  Header -->
    <!--Start Body -->

    <div class="card-body">

        <!-- start Griddata-->
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">
                <thead class="text-center">
                    <tr>
                        <th width="6%">
                            @Localizer["Sr.No"]
                        </th>
                        <th style="display:none" class="no-filter">
                            @Localizer[@Html.DisplayNameFor(model => model.UserId)]
                        </th>
                        <th style="display:none" class="no-filter">
                            @Localizer[@Html.DisplayNameFor(model => model.c_id)]
                        </th>
                        <th>
                            @Localizer["Name"]
                        </th>
                        <th>
                            @Localizer["Code"]
                        </th>
                        <th>
                            @Localizer["Contact"]
                        </th>
                        <th>
                            @Localizer["Email"]
                        </th>
                       

                        <th width="7%" class="no-filter">
                            @Localizer["Action"]
                        </th>
                    </tr>
                </thead>


                <tbody>
                    @{
                        int itemNumber = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-end">
                                @itemNumber
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.UserId)
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.c_id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.c_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.c_ccode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.c_contact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.c_email)
                            </td>
                          
                          
                            <td class="text-center">
                                <div class="d-inline-flex">

                                    <a asp-action="Edit" asp-controller="CustomerMaster" asp-route-c_id="@item.c_id" class='editicon text-primary' title="View" style="cursor:pointer"> <span  class='fas fa-edit '></span></a>
                                    <a href="@Url.Action("Delete", new { c_id = @item.c_id })" onclick="return confirm('Are you sure you want to delete?')" style="display:@Context.Session.GetString("DeleteAccess")" class='deleteicon text-danger' title="Delete"> <span class='fa fa-trash ml-2'></span></a>
                                  
                                </div>


                            </td>


                        </tr>
                        itemNumber++;
                    }
                </tbody>

            </table>
        </div>
        <!-- End Griddata-->
        <!-- start Pagination-->
        <div class="row mt-3">
            <div class="col-lg-5 col-md-5 col-12 ">
                <div class="row ">
                    <div class="col-lg-3 col-md-3 col-12 d-flex justify-content-lg-start justify-content-md-start justify-content-center ">
                        <h6 class="mt-2"> @Localizer["Show"]</h6>&nbsp;&nbsp;
                        <select name="table_id_length" id="table_length_select" aria-controls="table_id" class="form-select w-auto">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        &nbsp;&nbsp;
                        <h6 class="mt-2"> @Localizer["entries"]</h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-2"></div>
            <div class="col-lg-5 col-md-5 col-12 mt-lg-0 mt-md-0 mt-3">
                <nav aria-label="Page navigation example">
                    <div id="table_id_length">

                        <div id="custom-pagination" class=" d-flex text-center text-lg-end justify-content-end  text-end float-end">
                            <ul class="pagination justify-content-lg-end justify-content-md-end justify-content-center">


                                <li class="page-item disabled">
                                    <button class="page-link" href="#" aria-label="Previous" data-page="0"> <span aria-hidden="true">&laquo;</span></button>
                                </li>
                                <li class="page-item active"><button class="page-link" href="#" data-page="1">1</button></li>

                                <li class="page-item "><button class="page-link" href="#" data-page="2" aria-label="Next">  <span aria-hidden="true">&raquo;</span></button></li>

                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- end Pagination-->

    </div>
    <!--End Body -->
</div>



<script>

    $(document).ready(function () {
        // $('#dataTable').DataTable();
        //$('.table_id_length').css("display", "none");
        
        const urlParams = new URLSearchParams(window.location.search);

        const status = urlParams.get('status');
        if (status === '0') {

            $('#toggleStatus').prop('checked', false);
        }


    });

    myFunction();
    $('#table_length_select').change();

</script>









