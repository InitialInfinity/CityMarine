@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer;
@model IEnumerable<ibillcraft.Models.CountryMasterModel>
@{
    ViewData["Title"] = "Country Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Header = "Country Master";

}
<head>
    <script src="~/jsfiles/countrymaster/countrymasterjs.js"></script>
</head>
<div class="card shadow mb-4">
    <!--Start Header -->
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="m-0 font-weight-bold text-primary">@Localizer["Country Master"]</h2>
            </div>
            <div class="col-md-2 justify-content-lg-end justify-content-md-end justify-content-center mt-lg-0 mt-md-0 mt-3">
                <input type="text" id="custom-search" class="form-control" placeholder="Search"  title="Search"/>
            </div>

            <div class="col-auto d-flex flex-wrap toggle">
                <div class="form-check form-switch mt-lg-1 mt-md-1 mt-3 ml-2 ">
                   
                    <input class="form-check-input" type="checkbox" id="toggleStatus" checked onclick="performAction()" style="cursor:pointer;margin-top:9px">
                    <label class="form-check-label" for="toggleStatus" data-on="On" data-off="Off"></label>
                </div>
                <button class="btn btn-md text-light bg-primary mt-3 mt-lg-0 mt-md-0 ml-3"
                        type="button" title="Add Country"
                        data-bs-toggle="modal"
                        data-bs-target="#addSubscription" onclick="return AddCountry()">
                    <i class="fa fa-plus"></i>
                </button>
                <button class="btn btn-md text-light bg-success mt-3 mt-lg-0 mt-md-0 ml-2"
                        type="button" title="Excel"
                        data-bs-toggle="modal"
                        data-bs-target="#addSubscription" onclick="return Excel()">
                    <i class="fas fa-file-excel"></i>
                </button>
                <button class="btn btn-md text-light bg-danger mt-3 mt-lg-0 mt-md-0 ml-2"
                        type="button" title="Pdf"
                        data-bs-toggle="modal"
                        data-bs-target="#addSubscription" onclick="return Pdf()">
                    <i class="fas fa-file-pdf"></i>
                </button>
            </div>
            @*<div class="col-auto d-flex flex-wrap">
                <button class="btn btn-md text-light bg-primary mt-3 mt-lg-0 mt-md-0" type="button" data-bs-toggle="modal" onclick="return AddCountry()">
                    <i class="fa fa-plus"></i>
                </button>
                <button class="btn btn-md text-light bg-success mt-3 mt-lg-0 mt-md-0 ml-2" type="button" onclick="return Excel()" data-bs-toggle="modal" data-bs-target="#addSubscription">
                    <i class="fas fa-file-excel"></i>
                </button>
            
                <button class="btn btn-md text-light bg-danger mt-3 mt-lg-0 mt-md-0 ml-2" type="button" data-bs-toggle="modal" onclick="return Pdf()" data-bs-target="#addSubscription">
                    <i class="fas fa-file-pdf"></i>
                </button>
            </div>*@
        </div>
    </div>
    <!--End  Header -->
    <!--Start Body -->

    <div class="card-body">

        <!-- start Griddata-->
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">
                <thead class="text-center">
                    <tr>
                        <th width="6%">
                            @Localizer["Sr.No"]
                        </th>
                        <th style="display:none" >
                            @Localizer[@Html.DisplayNameFor(model => model.UserId)]
                        </th>
                        <th style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.co_id)]
                        </th>
                        <th>
                            @Localizer[@Html.DisplayNameFor(model => model.co_country_code)]
                        </th>
                        <th>
                            @Localizer[@Html.DisplayNameFor(model => model.co_country_name)]
                        </th>

                        <th>
                            @Localizer[@Html.DisplayNameFor(model => model.co_currency_name)]
                        </th>
                        <th style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.co_currency_id)]
                        </th>
                        <th>
                            @Localizer[@Html.DisplayNameFor(model => model.co_timezone)]
                        </th>
                        <th width="7%" class="no-filter">
                            @Localizer[@Html.DisplayNameFor(model => model.co_isactive)]
                        </th>
                        <th width="7%" class="no-filter">@Localizer["Action"]</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int itemNumber = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-end">
                                @itemNumber
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.UserId)
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.co_id)
                            </td>
                            <td onclick="GoToState('@item.co_id','@item.co_country_name')" style="cursor: pointer;">
                                @Html.DisplayFor(modelItem => item.co_country_code)
                            </td>
                            <td onclick="GoToState('@item.co_id','@item.co_country_name')" style="cursor: pointer;">
                                @Html.DisplayFor(modelItem => item.co_country_name)
                            </td>

                            <td onclick="GoToState('@item.co_id','@item.co_country_name')" style="cursor:pointer">
                                @Html.DisplayFor(modelItem => item.co_currency_name)
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.co_currency_id)
                            </td>
                            <td onclick="GoToState('@item.co_id','@item.co_country_name')" style="cursor:pointer">
                                @Html.DisplayFor(modelItem => item.co_timezone)
                            </td>
                            <td>
                                @* @Html.DisplayFor(modelItem => item.co_isactive)*@
                                <div class="form-check form-switch ml-auto active-toggle ">
                                    @if (item.co_isactive == "Active")
                                    {
                                        <input class="form-check-input ml-auto" type="checkbox" id="toggleSwitch" checked onclick="ToggleSwitchCon('@item.co_id','@item.co_country_code','@item.co_country_name','@item.co_currency_id','@item.co_currency_name','@item.co_timezone','0')" style="cursor:pointer">
                                        <label class="form-check-label" for="toggleSwitch" data-on="On" data-off="Off"></label>
                                    }
                                    else
                                    {
                                        <input class="form-check-input ml-auto" type="checkbox" id="toggleSwitch" onclick="ToggleSwitchCon('@item.co_id','@item.co_country_code','@item.co_country_name','@item.co_currency_id','@item.co_currency_name','@item.co_timezone','1')" style="cursor:pointer">
                                        <label class="form-check-label" for="toggleSwitch" data-on="On" data-off="Off"></label>
                                    }
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="d-inline-flex ">

                                    <a class='editicon text-primary' title="Edit" onclick="editLinkClick('@item.co_id')" style="cursor:pointer"> <span class='fas fa-edit'></span></a>
                                    <a href="@Url.Action("Delete", new { co_id = @item.co_id })" onclick="return confirm('Are you sure you want to delete?')" class='deleteicon text-danger' title="Delete"> <span class='fa fa-trash ml-2'></span></a>
                                    @*  <button type="button" class="btn btn-sm btn-primary" onclick="editLinkClick('@item.co_id')"><i class="fas fa-edit"></i></button>
                                <button type="button" class="btn btn-sm btn-danger ml-2" ><i class="fa fa-trash"></i></button>*@

                                </div>




                            </td>


                        </tr>
                        itemNumber++;
                    }
                </tbody>

            </table>
        </div>
        <!-- End Griddata-->
        <!-- start Pagination-->
        <div class="row mt-3">
            <div class="col-lg-5 col-md-5 col-12 ">
                <div class="row ">
                    <div class="col-lg-3 col-md-3 col-12 d-flex justify-content-lg-start justify-content-md-start justify-content-center ">
                        <h6 class="mt-2"> @Localizer["Show"]</h6>&nbsp;&nbsp;
                        <select name="table_id_length" id="table_length_select" aria-controls="table_id" class="form-select w-auto">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        &nbsp;&nbsp;
                        <h6 class="mt-2"> @Localizer["entries"]</h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-2"></div>
            <div class="col-lg-5 col-md-5 col-12 mt-lg-0 mt-md-0 mt-3">
                <nav aria-label="Page navigation example">
                    <div id="table_id_length">

                        <div id="custom-pagination" class=" d-flex text-center text-lg-end justify-content-end  text-end float-end">
                            <ul class="pagination justify-content-lg-end justify-content-md-end justify-content-center">


                                <li class="page-item disabled">
                                    <button class="page-link" href="#" aria-label="Previous" data-page="0"> <span aria-hidden="true">&laquo;</span></button>
                                </li>
                                <li class="page-item active"><button class="page-link" href="#" data-page="1">1</button></li>

                                <li class="page-item "><button class="page-link" href="#" data-page="2" aria-label="Next">  <span aria-hidden="true">&raquo;</span></button></li>

                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- end Pagination-->
        <!-- start Modal-->
        <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-dark fw-bold" id="exampleModalLabel">@Localizer["Add Country"]</h5>

                        <button type="button" class="btn-close bg-danger text-white" data-bs-dismiss="modal" aria-label="Close" onclick="CancelData()"></button>
                    </div>
                    <div class="modal-body text-dark">
                        <div class="form-group" style="display:none">
                            <label class="control-label">Id</label>
                            <input id="co_id" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display:none">
                            <label class="control-label ">@Localizer["Currency Id"]</label>
                            <input id="co_currency_id" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">
                                        @Localizer["Code"] <span class="text-danger">*</span>
                                    </label>
                                    <input id="co_country_code" class="form-control" placeholder="Enter Code" oninput="this.value = this.value.toUpperCase()" maxlength="10" />
                                    <span id="message"></span>

                                </div>
                            </div>

                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">
                                        @Localizer["Name"] <span class="text-danger">*</span>
                                    </label>
                                    <input id="co_country_name" class="form-control capital-input" placeholder="Enter Name" onkeydown="return letterOnly(event)" maxlength="75" />
                                    <span id="message"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">
                                        @Localizer["Currency"] <span class="text-danger">*</span>
                                    </label>
                                    <select class="form-select" id="co_currency_name" asp-items="@(new SelectList(ViewBag.co_currency_name,"Id","Value"))" placeholder="Select Currency" required>
                                        <option value="">-- Select --</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">
                                        @Localizer["Timezone"] <span class="text-danger">*</span>
                                    </label>
                                    <input id="co_timezone" class="form-control" placeholder="Enter Timezone" maxlength="75" />
                                    <span id="message"></span>
                                </div>
                            </div>
                        </div>


                        <div class="row mt-2">

                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">

                                <div class="form-check ">
                                    <input class="form-check-input" type="checkbox" value="" id="co_isactive" checked>
                                    <label class="form-check-label fw-bold text-dark" for="flexCheckChecked">
                                        @Localizer["Is Active"]
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button title="Save" type="submit" id="btnsubmit" value="Create" class="btn btn-primary" onclick="submitCountry()"> @Localizer["Submit"]</button>
                        <button type="button" title="Close" class="btn btn-secondary" data-dismiss="modal" onclick="CancelData()"> @Localizer["Cancel"]</button>
                    </div>
                </div>
            </div>

        </div>

        <!-- end Modal-->
    </div>
    <!--End Body -->
</div>


<script>

    $(document).ready(function () {
       // $('#dataTable').DataTable();
        //$('.table_id_length').css("display", "none");
        $('#createModal').modal({
            backdrop: 'static', // Prevents closing on outside click
            keyboard: false // Prevents closing with the escape key
        });
        const urlParams = new URLSearchParams(window.location.search);

        const status = urlParams.get('status');
        if (status === '0') {

            $('#toggleStatus').prop('checked', false);
        }


    });
    
    myFunction();
    $('#table_length_select').change();
    
</script>


